<% if(typeof errors != 'undefined') {%> <% errors.forEach(function(error) { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error.msg %>
  <button type="button" class="close btn btn-lg px-1 py-0 text-warning" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% }); %> <% } %>

<% if (success_msg != '') { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
	<%= success_msg %>
  <button type="button" class="close btn btn-lg px-1 py-0 text-success" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>


<% if (error_msg != '') { %>
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<%= error_msg %>
		<button type="button" class="close btn btn-lg px-1 py-0 text-warning" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<% } %>